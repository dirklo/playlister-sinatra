<h1>GENRE SHOW PAGE FOR <%= @genre %></h1>

<h2>All Songs</h2>
<ul>
    <% @genre.songs.each do |song|%>
        <li>
            <a href="/songs/<%= song.slug %>"><%= song.name %></a>
        </li>
    <% end %>
</ul>


<h2>All Artists</h2>
<ul>
    <% @genre.artists.each do |artist|%>
        <li>
            <a href="/artists/<%= artist.slug %>"><%= artist.name %></a>
        </li>
    <% end %>
</ul>

<form action="genres/<%= @genre.slug %>/edit">
    <button type="submit">Edit Genre</button>
</form>

<form action="genres/<%= @genre.slug %>" method="POST">
<input type="hidden" id="hidden" name="_method" value="DELETE">
    <button type="submit">Delete Genre</button>
</form>
<h1>SHOW PAGE FOR <%= @artist.name %></h1>

<h2>ALL SONGS</h2>
<ul>
    <% @artist.songs.each do |song| %>
        <li>
            <a href="/songs/<%= song.slug %>"><%= song.name %></a>
        </li>
    <% end %>
</ul>

<h2>ALL GENRES</h2>
<ul>
    <% @artist.genres.each do |genre| %>
        <li>
            <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
        </li>
    <% end %>
</ul>

<form action="/artists/<%= @artist.slug %>/edit">
    <button type="submit">Edit Artist</button>
</form>

<form action="/artists/<%= @artist.slug %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="DELETE">
    <button type="submit">Delete Artist</button>
</form>
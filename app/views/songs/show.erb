<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %> 
<h1>SONG SHOW PAGE</h1>


<h2>Title:<%= @song.name %></h2>
<h2>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>

<h2>Genres:</h2>
<ul>
<% if @song.genres %>
    <% @song.genres.each do |genre| %>
        <li>
            <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
        </li>
    <% end %>
<% end %>
</ul>

<form action="/songs/<%= @song.slug %>/edit" method="GET">
    <button type="submit">Edit Song</button>
</form>

<form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="DELETE">
    <button type="submit">Delete Song</button>
</form>
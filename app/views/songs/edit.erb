<h1>EDITING <%= @song.name %></h1>

<h1>Edit a New Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="artist_name">Artist Name</label>
    <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>"> </br>

    <label for="name">Name</label>
    <input type="text" name="song[name]" id="name" value="<%= @song.name %>""> </br>

    <label> Genres </label>
    <% Genre.all.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre)%>><%= genre.name %>
    <% end %>

    <input type="submit" value="Save">
</form>